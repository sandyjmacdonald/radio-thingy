# Example Radio Station Configuration
# Copy this file and customize it for your station
# Example: cp station.toml.example MYCALL.toml

# ============================================================================
# BASIC STATION INFO
# ============================================================================

name = "MYCALL"    # Station call letters/name (e.g., KXYZ, WABC)
freq = 99.9        # FM frequency

# ============================================================================
# MEDIA DIRECTORIES
# ============================================================================

# Directory containing station identification audio files (MP3)
# These are short clips that identify your station
idents_dir = "/path/to/media/idents/MYCALL"

# Directory containing commercial/advertisement audio files (MP3)
commercials_dir = "/path/to/media/commercials/MYCALL"

# ============================================================================
# COMMERCIAL BREAK CONFIGURATION
# ============================================================================

# How often to trigger a commercial break (in seconds)
# 900 = 15 minutes, 1800 = 30 minutes
break_frequency_s = 900

# Target length of commercial break (in seconds)
# The scheduler will try to fill this time with ident + commercials
break_length_s = 60

# ============================================================================
# STATION IDENT OVERLAY CONFIGURATION
# ============================================================================

# How often to overlay a station ident on top of a song (in seconds)
# 180 = 3 minutes, 300 = 5 minutes
ident_frequency_s = 180

# How many seconds into the song to start the ident overlay
ident_pad_s = 2.0

# Volume reduction factor for music when ident is playing (0.0-1.0)
# 0.4 = music plays at 40% volume during ident
ident_duck = 0.4

# How long the volume fade takes (in seconds)
ident_ramp_s = 0.5

# ============================================================================
# PROGRAMMING SCHEDULE
# ============================================================================
# Format: hour = { tags = "genre" } or { tags = ["genre1", "genre2"] }
# Hours are 0-23 (24-hour format)
# Tags correspond to subdirectory names in your music library
#
# NEW: Interstitials support
# - interstitials = "path/to/directory" (directory with interstitial MP3s)
# - interstitials_probability = 0.0-1.0 (chance of playing between songs)
#   * 0.0 = never play
#   * 1.0 = always play after every song
#   * 0.3 = 30% chance after each song

[schedule.monday]
# Early morning - calm music, occasional promos
0 = { tags = "ambient" }
1 = { tags = "ambient" }
2 = { tags = "ambient" }
3 = { tags = "ambient" }
4 = { tags = "ambient" }
5 = { tags = "ambient" }

# Morning drive - upbeat music with frequent station promos
6 = { tags = "pop", interstitials = "/path/to/interstitials/morning", interstitials_probability = 0.5 }
7 = { tags = "pop", interstitials = "/path/to/interstitials/morning", interstitials_probability = 0.5 }
8 = { tags = "pop", interstitials = "/path/to/interstitials/morning", interstitials_probability = 0.5 }

